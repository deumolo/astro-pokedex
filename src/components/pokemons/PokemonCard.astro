---

interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').slice(-2)[0];
const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;

---

<div
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    !isBig && 'border',
  ]}
>
  <img transition:name={`${name}-image`} class:list={[isBig && `w-26 h-26`, !isBig && `w-16 h-16`]} src={imageUrl} alt={name} />
  <div class:list={[`capitalize`, isBig && 'text-3xl text-blue-600']}>#{id} {name}</div>
</div>
